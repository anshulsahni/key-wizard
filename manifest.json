{
  "manifest_version": 3,
  "name": "Key Wizard",
  "version": "1.0.0",
  "description": "Keyboard-based navigation for Google search results",
  "author": "Anshul Sahni",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://www.google.com/*",
    "*://www.google.co.uk/*",
    "*://www.google.ca/*",
    "*://www.google.com.au/*",
    "*://www.google.de/*",
    "*://www.google.fr/*",
    "*://www.google.co.jp/*",
    "*://www.google.co.in/*",
    "*://claude.ai/*",
    "*://*.claude.ai/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.google.com/search*",
        "*://www.google.co.uk/search*",
        "*://www.google.ca/search*",
        "*://www.google.com.au/search*",
        "*://www.google.de/search*",
        "*://www.google.fr/search*",
        "*://www.google.co.jp/search*",
        "*://www.google.co.in/search*",
        "*://claude.ai/*",
        "*://*.claude.ai/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}

