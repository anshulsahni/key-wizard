{
  "name": "key-wizard",
  "version": "1.0.0",
  "description": "Chrome extension for keyboard-based navigation through Google search results",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "npm run build:content && npm run build:worker && npm run build:copy",
    "build:content": "vite build --config vite.content.config.ts",
    "build:worker": "vite build --config vite.service-worker.config.ts",
    "build:copy": "node -e \"const fs=require('fs');fs.copyFileSync('manifest.json','dist/manifest.json');const {execSync}=require('child_process');execSync('cp -r public/icons dist/ 2>/dev/null || true');if(!fs.existsSync('dist/content.css')){fs.writeFileSync('dist/content.css','.key-wizard-highlight{outline:2px solid #4285f4!important;outline-offset:4px;border-radius:4px;background-color:rgba(66,133,244,.08)!important;transition:background-color .2s ease}')}\"",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "chrome-extension",
    "keyboard-navigation",
    "google-search"
  ],
  "author": "Anshul Sahni",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^1.2.0",
    "happy-dom": "^14.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-static-copy": "^3.1.4",
    "vitest": "^1.2.0"
  }
}

